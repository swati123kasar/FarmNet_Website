<!DOCTYPE html>

<html>
<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
* {
  box-sizing: border-box;
}


.column {
  float: left;
  width: 50%;
  padding: 10px;
}


.row:after {
  content: "";
  display: table;
  clear: both;

}


.btn {
  border: none;
  outline: none;
  padding: 12px 16px;
  background-color: #f1f1f1;
  cursor: pointer;
}

.btn:hover {
  background-color: #ddd;
}

.btn.active {
  background-color: #666;
  color: white;
}


</style>
</head>

<body background='images/bg.jpg' style="background-position: center;background-repeat: no-repeat;background-size: cover;">


<h2 style="color:white;">USERS</h2>

<div id="btnContainer" >
  <button class="btn" onclick="listView()" ><i class="fa fa-bars"></i> List</button> 
  <button class="btn active" onclick="gridView()"><i class="fa fa-th-large"></i> Grid</button>
</div>

<center><h4 style="font: small-caption;font-size: 30px;color:white"><b><u>FARMNET<u><b></h4></center>
<br>

<div style="margin-left:200px;margin-right: 200px;margin-top: 10px">
<div class="row">
  <div class="column" style="background-color:black;opacity: 0.9">
    <center><h2 style="color:white;"><a href='/admin/'>ADMIN</a></h2></center>
    
  </div>
  <div class="column" style="background-color:black;opacity: 0.9">
    <center><h2 style="color:white;"><a href='/official/'>OFFICIAL</a></h2></center>
    
  </div>
</div>

<div class="row">
  <div class="column" style="background-color:black;opacity: 0.9">
    <center><h2 style="color:white;"><a href='/expert/'>EXPERT</a></h2></center>
    
  </div>
  <div class="column" style="background-color:black;opacity: 0.9">
    <center><h2 style="color:white;"><a href='/'>FARMER</a></h2></center>
    
  </div>
</div>
</div>

<script>

var elements = document.getElementsByClassName("column");


var i;


function listView() {
  for (i = 0; i < elements.length; i++) {
    elements[i].style.width = "100%";
  }
}


function gridView() {
  for (i = 0; i < elements.length; i++) {
    elements[i].style.width = "50%";
  }
}


var container = document.getElementById("btnContainer");
var btns = container.getElementsByClassName("btn");
for (var i = 0; i < btns.length; i++) {
  btns[i].addEventListener("click", function() {
    var current = document.getElementsByClassName("active");
    current[0].className = current[0].className.replace(" active", "");
    this.className += " active";
  });
}
</script>

</body>
</html>
